{
  "scripts": {
    "setup": "concurrently \"npm run setup_client\" \"npm run setup_server\" ",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "setup_client": "cd client && npm install",
    "setup_server": "cd server && npm install; npm i nodemon"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.8.2",
    "tailwindcss": "^3.4.15"
  }
}
